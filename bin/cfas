#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"

require_relative "../lib/cf/api/cfas"

begin
  api_config = "#{__dir__}/../config"
  api_output = "#{__dir__}/../api"
  cfas = Cf::Api::Specification::Cfas
  cfas.parse(ARGV)
  cfas.walk(api_config, api_output)
rescue StandardError => e
  puts "Error: #{e}"
  exit 1
end
